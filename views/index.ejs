<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Angry's Attendance & Eligibility Manager</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    .collapsible {
      background-color: #777;
      color: white;
      cursor: pointer;
      padding: 10px;
      width: 100%;
      text-align: left;
      border: none;
      outline: none;
      font-size: 15px;
      margin-top: 10px;
    }
    .collapsible:hover,
    .active {
      background-color: #555;
    }
    .content {
      padding: 0 18px;
      display: none;
      overflow: hidden;
      background-color: #f1f1f1;
    }
    .content.show {
      display: block;
    }
  </style>
</head>
<body>
  <h1>ðŸ‘¥ Angry's Attendance & Eligibility Manager</h1>

  <!-- Eligibility Check -->
  <h2>Eligibility Check</h2>
  <form action="/check-eligibility" method="POST">
    <label for="category">Select Category:</label>
    <select name="categoryId" id="category" required>
      <option value="">Select Category</option>
      <% categories.forEach(category => {
        if (category.name !== "Ring 1" && category.name !== "Ring 2" && category.name !== "Archboss Weap 1" && category.name !== "Archboss Weap 2") { %>
          <option value="<%= category.id %>" <%= category.id === selectedCategoryId ? 'selected' : '' %>><%= category.name %></option>
      <% } }); %>
      <option value="ring" <%= selectedCategoryId === 'ring' ? 'selected' : '' %>>Ring</option>
    </select>

    <% let itemsToShow = [];
      if (selectedCategoryId === 'ring') {
        const ringCategories = categories.filter(c => c.name === "Ring 1" || c.name === "Ring 2");
        const seenItems = new Set();
        ringCategories.forEach(cat => {
          cat.items.forEach(item => {
            if (!seenItems.has(item.name)) {
              itemsToShow.push(item);
              seenItems.add(item.name);
            }
          });
        });
      } else {
        const selectedCategory = categories.find(c => c.id === selectedCategoryId);
        itemsToShow = selectedCategory?.items || [];
      }
    %>

    <% if (itemsToShow.length > 0) { %>
      <label for="item">Select Item:</label>
      <select name="itemId" id="item" required>
        <option value="">Select Item</option>
        <% itemsToShow.forEach(item => { %>
          <option value="<%= item.id %>" <%= item.id === selectedItemId ? 'selected' : '' %>><%= item.name %></option>
        <% }); %>
      </select>
    <% } %>

    <button type="submit">Check Eligibility</button>
  </form>

  <% if (eligibleMembers) { %>
    <% if (eligibleMembers.length > 0) { %>
      <h3>Eligible Members:</h3>
      <ul>
        <% eligibleMembers.forEach(member => { %>
          <li><%= member.name %></li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No eligible members found.</p>
    <% } %>
  <% } %>

  <!-- Add Member & Manage -->
  <button class="collapsible">Add Member & Manage Members</button>
  <div class="content">
    <h2>Add Member</h2>
    <form action="/members" method="POST">
      <input type="text" name="name" placeholder="Member Name" required />
      <button type="submit">Add Member</button>
    </form>

    <h2>Members & Attendance</h2>
    <% if (members.length === 0) { %>
      <p>No members yet.</p>
    <% } else { %>
      <!-- Attendance Form for all members -->
      <form action="/members/attendance" method="POST">
        <% members.forEach(member => { %>
          <div class="member">
            <strong><%= member.name %></strong>
            <% for (let i = 0; i < 8; i++) { %>
              <label>
                <input type="checkbox" name="attendance[<%= member.id %>][]" value="<%= i %>" <%= member.attendance[i] ? 'checked' : '' %> />
                Event <%= i + 1 %>
              </label>
            <% } %>
          </div>
        <% }); %>
        <button type="submit">Update Attendance for All</button>
      </form>
    <% } %>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const collapsibles = document.querySelectorAll(".collapsible");

      collapsibles.forEach((collapsible, index) => {
        const content = collapsible.nextElementSibling;
        const isOpen = localStorage.getItem(`collapsible-${index}`) === "true";

        if (isOpen) {
          collapsible.classList.add("active");
          content.classList.add("show");
        }

        collapsible.addEventListener("click", () => {
          const isVisible = content.classList.contains("show");
          content.classList.toggle("show");
          collapsible.classList.toggle("active");
          localStorage.setItem(`collapsible-${index}`, !isVisible);
        });
      });
    });
  </script>
</body>
</html>
